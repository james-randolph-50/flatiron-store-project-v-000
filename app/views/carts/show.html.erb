<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>
<% @cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= number_to_currency(line_item.item.price) %> | Quantity: <%= line_item.quantity %> |
    <% if line_item.item.inventory %>
      <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
    <% end %>

  <% end %> </p>


<p>Order total: <strong><%= number_to_currency(@cart.total) %></strong> </p>

<%= button_to 'Checkout', checkout_path %>
